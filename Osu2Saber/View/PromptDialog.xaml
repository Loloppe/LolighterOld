<Window x:Class="Osu2Saber.Model.PromptDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    WindowStartupLocation="CenterScreen" 
    SizeToContent="WidthAndHeight"
    MinWidth="300"
    MinHeight="100"
    WindowStyle="SingleBorderWindow"
    ResizeMode="CanMinimize">
    <StackPanel Margin="5">
        <TextBlock x:Name="txtQuestion" Margin="5"><InlineUIContainer>
                <Label Content="Pattern name" FontSize="14"/>
            </InlineUIContainer></TextBlock>
        <TextBox Name="txtResponse" Margin="5" FontSize="14"/>
        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
            <Button Content="_Ok" IsDefault="True" Margin="5" Name="btnOk" Click="btnOk_Click" FontSize="14" />
            <Button Content="_Cancel" IsCancel="True" Margin="5" Name="btnCancel" Click="btnCancel_Click" FontSize="14" />
        </StackPanel>
    </StackPanel>
</Window>